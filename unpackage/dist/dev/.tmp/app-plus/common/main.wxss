@charset "utf-8";
/* CSS Document */
page,._ul,._ol,._li,._p,._h1,._h2,._h3,._h4,._h5,._h6,form,._fieldset,._table,._td,._img,._div,._dl,._dt,._dd,input{
    margin:0;
    padding:0;
    outline: none;
}
page{
    font-size: 14px;
    /*font-family: "Microsoft YaHei", "微软雅黑", "宋体", simsun;*/
    font-family: "Arial Negreta", "Arial Normal", Arial,"Microsoft YaHei", "\5FAE\8F6F\96C5\9ED1", "\5B8B\4F53", simsun;
    color: #454443;
    background: #fff;
}
._img{
    border: none;
}
._li{
    list-style: none;
}
input,._select,textarea{
    outline: none;
    border:none;
}
textarea{
    resize: none;
}
._a:link,._a:visited{
    text-decoration: none;
    color: #454443;
    outline: none;
}
._a:hover,._a:active{
    color: #faa600;
    outline: none;
}
._em,._i{
    font-style: normal;
}
/* 移动端禁止选中内容：*/
.user-select-none {
    -webkit-user-select:none;
}
/* 取消touch的高亮显示：*/
page {
    -webkit-tap-highlight-color:rgba(0,0,0,0);
}
input[type="button"], input[type="submit"], input[type="reset"] {
    -webkit-appearance: none;
}
textarea {
    -webkit-appearance: none;
}
::-webkit-input-placeholder { /* WebKit browsers */
    color:#999;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:#999;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:#999;
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:#999;
}
::-webkit-scrollbar-track-piece {
    background-color: transparent;
}
::-webkit-scrollbar {
    width: 7px;
    height: 7px;
    background-color: transparent;
}
::-webkit-scrollbar-thumb {
    border-radius: 5px;
    background-color: hsla(220, 4%, 58%, .3);
}
::-ms-scrollbar-track-piece {
    background-color: transparent;
}
::-ms-scrollbar {
    width: 7px;
    height: 7px;
    background-color: transparent;
}
::-ms-scrollbar-thumb {
    border-radius: 5px;
    background-color: hsla(220, 4%, 58%, .3);
}
/*清除浮动*/
.clearfix:after{
    content: "";
    display: block;
    clear: both;
}
.clearfix{
    zoom: 1;
    overflow: hidden;
}
.clear{
   clear: both;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.oh{
    overflow: hidden;
}
.relative{
    position: relative;
}
.base-table{
    width: 100%;
    margin-bottom: 108px;
    text-align: center;
    table-layout: fixed;
    empty-cells: show;
    border-collapse: collapse;
}
.base-table ._tr ._td,.base-table ._tr ._th{
    border-right: 1px solid #f2ad4b;
    border-bottom: 1px solid #f2ad4b;
    height: 30px;
    line-height: 30px;
    color: #515151;
    padding: 20px 8px;
    text-align: center;
}
.base-table ._tr:first-child ._td{
    border-top: 1px solid #f2ad4b;
}
.base-table ._tr ._td:first-child{
    border-left: 1px solid #f2ad4b;
}
.opy{
    opacity: 0;
}
._iframe{
    display: block;
